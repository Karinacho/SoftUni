{% extends 'base.html.twig' %}


{% block container %}
    {% block body %}
        {% block header %}
            {{ parent() }}
        {% endblock %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <section class="intro">
        <div class="login-box">
        <h1>Login Here</h1>
            <form name="authenticate" action="{{ path('security_login') }}" method="post">
                <p>Username</p>
                <input type="text" name="_username" placeholder="Enter username" value="{{ last_username }}" /><br>
                <p>Password</p>
                <input type="text" name="_password" placeholder="Enter password"/><br>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <input type="submit" name="submit" value="Login">

            </form>
        </div>


        </section>

    {% endblock %}

{% endblock %}
{% block footer %}

{% endblock %}

