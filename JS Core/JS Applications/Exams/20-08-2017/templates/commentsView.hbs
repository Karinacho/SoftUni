{{>header}}
<div class="content">
    {{>navigation}}
<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{post.url}}">
                <img src="{{post.imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{post.title}}">
                    {{post.description}}
                </a>
            </div>
            <div class="details">
                <p>{{post.description}}</p>
                        <div class="info">
                    submitted {{post.time}} ago by {{post.author}}
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="editLink" href="#/edit/{{post._id}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/delete/{{post._id}}">delete</a></li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form action="#/createComment" method="post" id="commentForm">
            <input type="hidden" name="postId" value="{{post._id}}" />
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comment}}
    <article class="post post-content">
        <p>{{content}}</p>
        <div class="info">
            submitted {{time}} by {{author}} |{{#if commentAuthor}}<a href="#/{{postId}}/comment/delete/{{_id}}" class="deleteLink">delete</a>{{/if}}

        </div>
    </article>
    {{else}}
        <p>No comments in database</p>
    {{/each}}
</section>
</div>
{{>footer}}